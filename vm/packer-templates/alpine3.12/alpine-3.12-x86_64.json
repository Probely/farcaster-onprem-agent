{
  "builders": [
    {
      "boot_command": [
        "root<enter><wait>",
        "ifconfig eth0 up \u0026\u0026 udhcpc -i eth0<enter><wait10>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/answers<enter><wait>",
        "sed -i s#__DISK_DEVICE__#/dev/sda# $PWD/answers<enter><wait>",
        "setup-alpine -f $PWD/answers<enter><wait5>",
        "only-used-during-build<enter><wait>",
        "only-used-during-build<enter><wait>",
        "<wait10><wait10><wait10>",
        "y<enter>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "rc-service sshd stop<enter>",
        "mount /dev/sda2 /mnt<enter>",
        "echo 'PermitRootLogin yes' >> /mnt/etc/ssh/sshd_config<enter>",
        "umount /mnt<enter>",
        "reboot<enter>"
      ],
      "boot_wait": "30s",
      "communicator": "ssh",
      "disk_size": "{{user `disk_size`}}",
      "guest_additions_mode": "disable",
      "guest_os_type": "Linux26_64",
      "hard_drive_interface": "sata",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "sha256:{{user `iso_checksum`}}",
      "iso_urls": [
        "{{user `iso`}}",
        "{{user `iso_url`}}"
      ],
      "shutdown_command": "/sbin/poweroff",
      "ssh_password": "only-used-during-build",
      "ssh_timeout": "10m",
      "ssh_username": "root",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ]
      ],
      "virtualbox_version_file": ".vbox_version"
    },
    {
      "accelerator": "{{user `vm_type`}}",
      "boot_command": [
        "root<enter><wait>",
        "ifconfig eth0 up \u0026\u0026 udhcpc -i eth0<enter><wait10>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/answers<enter><wait>",
        "sed -i s#__DISK_DEVICE__#/dev/vda# $PWD/answers<enter><wait>",
        "setup-alpine -f $PWD/answers<enter><wait5>",
        "only-used-during-build<enter><wait>",
        "only-used-during-build<enter><wait>",
        "<wait10><wait10><wait10>",
        "y<enter>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "rc-service sshd stop<enter>",
        "mount /dev/vda2 /mnt<enter>",
        "echo 'PermitRootLogin yes' >> /mnt/etc/ssh/sshd_config<enter>",
        "umount /mnt<enter>",
        "reboot<enter>"
      ],
      "boot_wait": "30s",
      "communicator": "ssh",
      "disk_interface": "virtio",
      "disk_size": "{{user `disk_size`}}",
      "format": "qcow2",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "sha256:{{user `iso_checksum`}}",
      "iso_urls": [
        "{{user `iso`}}",
        "{{user `iso_url`}}"
      ],
      "net_device": "virtio-net",
      "shutdown_command": "/sbin/poweroff",
      "ssh_password": "only-used-during-build",
      "ssh_timeout": "10m",
      "ssh_username": "root",
      "type": "qemu",
      "vm_name": "probely-remote-agent"
    },
    {
      "boot_command": [
        "root<enter><wait>",
        "ifconfig eth0 up \u0026\u0026 udhcpc -i eth0<enter><wait10>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/answers<enter><wait>",
        "sed -i s#__DISK_DEVICE__#/dev/sda# $PWD/answers<enter><wait>",
        "setup-alpine -f $PWD/answers<enter><wait5>",
        "only-used-during-build<enter><wait>",
        "only-used-during-build<enter><wait>",
        "<wait10><wait10><wait10>",
        "y<enter>",
        "<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "rc-service sshd stop<enter>",
        "mount /dev/sda2 /mnt<enter>",
        "echo 'PermitRootLogin yes' >> /mnt/etc/ssh/sshd_config<enter>",
        "umount /mnt<enter>",
        "reboot<enter>"
      ],
      "boot_wait": "30s",
      "communicator": "ssh",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "Linux26_64",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "sha256:{{user `iso_checksum`}}",
      "iso_urls": [
        "{{user `iso`}}",
        "{{user `iso_url`}}"
      ],
      "shutdown_command": "/sbin/poweroff",
      "ssh_password": "only-used-during-build",
      "ssh_timeout": "10m",
      "ssh_username": "root",
      "type": "vmware-iso",
      "format": "ova"
    }
  ],
  "description": "Probely Alpine Linux x86_64",
  "provisioners": [
    {
      "environment_vars": [
        "BUILDER={{user `builder`}}"
      ],
      "scripts": [
        "scripts/00base.sh",
        "scripts/01alpine.sh",
        "scripts/01networking.sh",
        "scripts/02sshd.sh",
        "scripts/03user.sh",
        "scripts/04sudoers.sh",
        "scripts/05docker.sh",
        "scripts/90virtualbox.sh",
        "scripts/90vmware.sh",
        "scripts/91harden.sh",
        "scripts/97farcaster-setup.sh",
        "scripts/98minimize.sh",
        "scripts/99disable-root.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "builder": "{{env `VM_BUILDER`}}",
    "cpus": "1",
    "disk_size": "5120",
    "iso": "isos/alpine-virt-3.12.1-x86_64.iso",
    "iso_checksum": "bb87644518e85972582e25b5c872854f28de615e04cb58c1cdaadc46d3ae60ba",
    "iso_url": "http://dl-cdn.alpinelinux.org/alpine/v3.12/releases/x86_64/alpine-virt-3.12.1-x86_64.iso",
    "memory": "512",
    "vm_release": "{{ env `VM_REL`}}",
    "vm_tag": "{{env `VM_TAG`}}",
    "vm_type": "{{env `VM_TYPE`}}",
    "vm_version": "{{ env `VM_VER`}}"
  }
}

